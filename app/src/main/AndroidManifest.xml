<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    <queries>
        <intent>
            <action android:name="android.intent.action.SEND" />

            <data android:mimeType="text/plain" />
        </intent>
    </queries>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BranchAssignment"
        tools:ignore="MissingClass"
        tools:targetApi="31">
        <activity
            android:name=".Sharing_DeepLink"
            android:exported="false" />
        <activity
            android:name=".Activity3"
            android:exported="true"
            android:launchMode="singleTask"
            android:parentActivityName=".Activity2">
            <meta-data
                android:name="io.branch.sdk.ashisha.app.link"
                android:value="activity3" />

            <!-- Branch URI Scheme -->
            <intent-filter>

                <!-- If utilizing $deeplink_path please explicitly declare your hosts, or utilize a wildcard(*) -->
                <data
                    android:host="activity3"
                    android:scheme="testapp" /> <!-- testapp://activity3 -->

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity2"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/Theme.BranchAssignment.NoActionBar">

            <!-- Making this activity as Launcher Activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Branch URI Scheme -->
            <intent-filter>

                <!-- If utilizing $deeplink_path please explicitly declare your hosts, or utilize a wildcard(*) -->
                <data
                    android:host="open"
                    android:scheme="testapp" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>

            <!-- Branch App Links - Live App -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- If utilizing $deeplink_path please explicitly declare your hosts, or utilize a wildcard(*) -->
                <data
                    android:host="ashisha.app.link"
                    android:pathPrefix="/YCUfHffMkxb"
                    android:scheme="https" />
                <!-- example-alternate domain is required for App Links when the Journeys/Web SDK and Deepviews are used inside your website. -->
                <data
                    android:host="ashisha-alternate.app.link"
                    android:pathPrefix="/YCUfHffMkxb"
                    android:scheme="http" />
            </intent-filter>

            <!-- Branch App Links - For Test App (not used as of now) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="ashisha.app.link"
                    android:scheme="https" />
                <!-- example-alternate domain is required for App Links when the Journeys/Web SDK and Deepviews are used inside your website. -->
                <data
                    android:host="example-alternate.test-app.link"
                    android:scheme="https" />
            </intent-filter>
        </activity> <!-- Branch init and Branch Live project keys from dashboard -->
        <meta-data
            android:name="io.branch.sdk.BranchKey"
            android:value="key_live_lDjjnfccfgaKeVVeKH2VEcodzrcjI8TA" />
        <meta-data
            android:name="io.branch.sdk.BranchKey.test"
            android:value="key_live_lDjjnfccfgaKeVVeKH2VEcodzrcjI8TA" />
        <meta-data
            android:name="io.branch.sdk.TestMode"
            android:value="false" />


        <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 For Android 13 and above, this is mandatory -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
    </application>

</manifest>